extends layout.pug

block content

  article.portfolio-intro

    //- Portfolio Title 
    h1 Gabryel's Portfolio  

    //- Description for your portfolio. 
    p Hello! This portforlio shows all of the projects i have created. Feel free to look around and enjoy!


  article.portfolio-project-thumbs
    .projects-box.box.grid

      //- Use the Pug `each` iterator to loop over the projects in your data file  
      each project in projects
      

        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src= project.images_urls[0])
            h5= project.project_name

